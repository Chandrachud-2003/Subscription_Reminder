<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainBackground" parent="android:Theme">
        <item name="android:background">@drawable/main_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>

    </style>

    <style name="AddBackground" parent="android:Theme">
        <item name="android:background">@drawable/background_purple</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>

    </style>



</resources>
