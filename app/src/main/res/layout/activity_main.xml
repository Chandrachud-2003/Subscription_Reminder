<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dayNumberText"
        android:layout_width="63dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="53sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="10dp"
        tools:text="18" />

    <TextView
        android:id="@+id/monthText"
        android:layout_width="53dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Oct"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="20dp" />

    <TextView
        android:id="@+id/yearText"
        android:layout_width="62dp"
        android:layout_height="29dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="2018"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/dayText"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="THURSDAY"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="20dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/displayView"
        android:layout_width="388dp"
        android:layout_height="476dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="170dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="365dp"
        android:layout_height="3dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="89dp" />

    <ImageButton
        android:id="@+id/addPaymentButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/plus"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="55dp" />

    <RadioButton
        android:id="@+id/mainBillButton"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:text="@string/mainBillButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="119dp"
        tools:text="BILLS" />

    <RadioButton
        android:id="@+id/mainSubscriptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainSubButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="123dp"
        tools:text="SUBSCRIPTION" />

</android.support.constraint.ConstraintLayout>